<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.guto.pecame.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButtonComanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="104dp"
            app:srcCompat="@drawable/ic_order"/>

        <ImageButton
            android:id="@+id/imageButtonMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButtonComanda"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/imageButtonComanda"
            app:srcCompat="@drawable/ic_table" />

        <TextView
            android:id="@+id/textViewComanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewMesa"
            android:layout_alignBottom="@+id/textViewMesa"
            android:layout_alignStart="@+id/imageButtonComanda"
            android:text="Comanda"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButtonMesa"
            android:layout_below="@+id/imageButtonMesa"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="11dp"
            android:text="Mesas"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
