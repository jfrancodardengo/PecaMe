<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.guto.pecame.ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/image_button_comanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="104dp"
            app:srcCompat="@drawable/ic_order"
            android:contentDescription="@string/imagem_de_comanda" />

        <ImageButton
            android:id="@+id/image_button_mesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_button_comanda"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/image_button_comanda"
            app:srcCompat="@drawable/ic_table"
            android:contentDescription="@string/imagem_de_mesa" />

        <TextView
            android:id="@+id/text_label_comanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_label_mesa"
            android:layout_alignBottom="@+id/text_label_mesa"
            android:layout_alignStart="@+id/image_button_comanda"
            android:text="@string/label_comanda"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/text_label_mesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_button_mesa"
            android:layout_below="@+id/image_button_mesa"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="11dp"
            android:text="@string/label_mesa"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
