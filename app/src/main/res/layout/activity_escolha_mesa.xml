<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.guto.pecame.ui.EscolhaMesaActivity">

    <EditText
        android:id="@+id/edit_mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="@string/edit_mesa"
        android:inputType="number"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/button_abrir_mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_mesa"
        android:layout_centerHorizontal="true"
        android:text="@string/button_abrir_mesa" />

</RelativeLayout>
