<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/linearVertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Produto"
        android:paddingBottom="@dimen/bottom_padding_textview"
        android:paddingTop="@dimen/top_padding_textview"
        android:textSize="@dimen/subheading_text_size"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="PreÃ§o"
        android:paddingBottom="@dimen/bottom_padding_textview"
        android:textSize="@dimen/body_text_size"
        android:textColor="@color/colorPrimaryLight"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@id/linearVertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonLess"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/button_bg_round"
            android:backgroundTint="@color/colorPrimary"
            android:text="-"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/text_qtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingStart="@dimen/bottom_padding_textview"
            android:paddingEnd="@dimen/bottom_padding_textview"
            android:paddingBottom="@dimen/bottom_padding_textview"
            android:paddingTop="@dimen/top_padding_textview"
            android:textSize="@dimen/subheading_text_size"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/button_bg_round"
            android:backgroundTint="@color/colorPrimary"
            android:text="+"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/button_bg_round"
            android:backgroundTint="@color/colorAccent"
            android:text="x"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>